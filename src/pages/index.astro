---
import BaseHead from "../components/BaseHead.astro";
import SlideHeader from "../components/SlideHeader.astro";
import SlidePreview from "../components/SlidePreview.astro";

const title = "UPC Lookup Service with Astro &amp; Cloudflare";
const description =
	'How to use Astro and Cloudflare to build and host amazing "serverless" projects.';
const permalink = "https://slides-astro-cloudflare-upc.codedemos.dev/";

import slides from "../data/slides.json";
export async function getStaticPaths() {
	return slides.map((slide) => {
		return { params: { slug: slide.linkText }, props: { slide } };
	});
}
---

<html lang="en">
	<head>
		<BaseHead {title} {description} {permalink} />
	</head>

	<body class=" text-gray-700 mx-auto max-w-6xl">
		<SlideHeader />
		<main class="px-8 mt-32 sm:mt-32 md:mt-16 mb-8">
			<h2 class="text-3xl">{description}</h2>
			<article aria-label="Presentation slides list">
				{slides.map((slide) => <SlidePreview slide={slide} />)}
			</article>
		</main>
	</body>
</html>
