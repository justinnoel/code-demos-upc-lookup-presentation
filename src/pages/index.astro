---
import BaseHead from "../components/BaseHead.astro";
import SlideHeader from "../components/SlideHeader.astro";
import SlidePreview from "../components/SlidePreview.astro";

interface MarkdownFrontmatter {
	index: number;
}

let title = "UPC Lookup Service with Astro &amp; Cloudflare";
let description =
	'How to use Astro and Cloudflare to build and host amazing "serverless" projects.';
let permalink = "https://slides-astro-cloudflare-upc.codedemos.dev/";

const allSlids = Astro.fetchContent<MarkdownFrontmatter>("./slides/*.md");
const sortedSlides = allSlids.sort((a, b) => a.index - b.index);
---

<html lang="en">
	<head>
		<BaseHead {title} {description} {permalink} />
		<link rel="stylesheet" href="/presentation.css" />

		<style>
			body { width: 100%; display: grid; grid-template-rows: 3.5rem 1fr;
			--gutter: 0.5rem; --doc-padding: 2rem; } header { width: 100%; height:
			100%; background-color: var(--theme-bg-offset); display: flex;
			align-items: center; justify-content: center; } .content { margin-top:
			4rem; margin-bottom: 8rem; } .content :global(main > * + *) { margin-top:
			1rem; } .intro { padding-bottom: 4rem; margin-bottom: 2rem; border-bottom:
			4px solid var(--theme-divider); } .intro > * { margin: 0; } .latest {
			font-size: 2.5rem; font-weight: 700; }
		</style>
	</head>

	<body>
		<SlideHeader />
		<div class="layout">
			<main class="content">
				<section class="intro">
					<h1 class="latest">{title}</h1>
					<p>{description}</p>
				</section>
				<section aria-label="Presentation slides list">
					{sortedSlides.map((slide) => <SlidePreview slide={slide} />)}
				</section>
			</main>
		</div>
	</body>
</html>
