---
import { getPrevNext } from "../utils.js";

const url = new URL(Astro.request.url);
const { nextSlide, previousSlide, slideIndex } = getPrevNext(url.pathname);

const previousClass = previousSlide ? "visible" : "hidden";
const nextClass = nextSlide ? "visible" : "invisible";
const homeClass = slideIndex === null ? "invisible" : "visible";
---

<header class="px-8 py-4">
	<nav class="flex justify-between text-2xl">
		<a
			href={`/slides/${previousSlide?.linkText}`}
			class={` text-gray-700 hover:text-yellow-700 ${previousClass}`}
		>
			&lt; Prev
		</a>
		<a href="/" class={` text-gray-700 hover:text-yellow-700 ${homeClass}`}
			>&lt; Home</a
		>
		<a
			href={`/slides/${nextSlide?.linkText}`}
			class={` text-gray-700 hover:text-yellow-700 ${nextClass}`}
		>
			Next &gt;
		</a>
	</nav>
</header>
