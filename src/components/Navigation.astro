---
import { getPrevNext } from "../utils.js";

const url = new URL(Astro.request.url);
const { nextSlide, previousSlide, slideIndex } = getPrevNext(url.pathname);

const previousClass = previousSlide ? "visible" : "hidden";
const nextClass = nextSlide ? "visible" : "invisible";
const homeClass = slideIndex === null ? "invisible" : "visible";
---

<header class="px-8 py-2">
	<nav
		class="border-b border-gray-200 px-4 flex items-center justify-between sm:px-0 pb-4"
	>
		<div class="w-0 flex-1 flex">
			<a
				href={`/slides/${previousSlide?.link}`}
				class={`border-t-2 border-transparent pt-4 pr-1 inline-flex items-center text-lg font-medium text-gray-500 hover:text-gray-700  ${previousClass}`}
			>
				<svg
					class="mr-3 h-5 w-5 text-gray-400"
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 20 20"
					fill="currentColor"
					aria-hidden="true"
				>
					<path
						fill-rule="evenodd"
						d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z"
						clip-rule="evenodd"></path>
				</svg>
				Prev
			</a>
		</div>
		<div class="md:-mt-px ">
			<a
				href="/"
				class={`border-transparent text-gray-500 hover:text-gray-700  border-t-2 pt-4 px-4 inline-flex items-center text-lg font-medium ${homeClass}`}
			>
				Home
			</a>
		</div>
		<div class="-mt-px w-0 flex-1 flex justify-end">
			<a
				href={`/slides/${nextSlide?.link}`}
				class={`border-t-2 border-transparent pt-4 pl-1 inline-flex items-center text-lg font-medium text-gray-500 hover:text-gray-700 ${nextClass}`}
			>
				Next
				<svg
					class="ml-3 h-5 w-5 text-gray-400"
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 20 20"
					fill="currentColor"
					aria-hidden="true"
				>
					<path
						fill-rule="evenodd"
						d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
						clip-rule="evenodd"></path>
				</svg>
			</a>
		</div>
	</nav>
</header>
