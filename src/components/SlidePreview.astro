---
export interface Props {
	slide: any;
}

const { slide } = Astro.props;
---

<article class="slide-preview">
	<header>
		<a href={slide.url}><h1 class="title">{slide.title}</h1></a>
	</header>
	<p>{slide.description}</p>
	<a href={slide.url}>Read more</a>
</article>

<style>
	.content :global(main > * + *) {
		margin-top: 1rem;
	}

	.slide-preview {
		padding-bottom: 2rem;
		margin-bottom: 2rem;
		border-bottom: 4px solid var(--theme-divider);
	}

	header {
		display: flex;
		flex-direction: column;
		text-align: left;
		align-items: flex-start;
		justify-content: center;

		padding-bottom: 2rem;
	}

	.title,
	.publish-date {
		margin: 0;
	}

	.publish-date {
		font-size: 1.25rem;
		color: var(--theme-text-lighter);
	}

	.title {
		font-size: 2.25rem;
		font-weight: 700;
		color: var(--theme-text);
	}
</style>
